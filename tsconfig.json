{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./server",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noImplicitAny": true
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "tests",
        "js",
        "public"
    ]
}